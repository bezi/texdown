mixin nav_item(title, active)
  li(class=(active==title)?"active":"")
    a(href="/" + title.toLowerCase() + "/")= title

mixin navbar(active)
  .navbar.navbar-inverse.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/") \(\mathrm{\TeX} \mathsf{\kern-.175em\lower.5ex\hbox{D}\kern-.09em\lower.5ex\hbox{o}\kern-.1em\lower.5ex\hbox{w}\kern-.075em\lower.5ex\hbox{n}}\)
      .navbar-collapse.collapse
        ul.nav.navbar-nav
          +nav_item("About", active)
          +nav_item("Contact", active)
